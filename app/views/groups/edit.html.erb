<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editiing Group</h1>
    <%= form_with model: @group, local: true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
      <div class="form-group">
        <%= f.label :group_name %>
        <%= f.text_field :group_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :group_introduction %>
        <%= f.text_area :group_introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

